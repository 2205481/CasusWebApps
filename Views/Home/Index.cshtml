@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="d-grid gap-2">
        <button class="btn btn-lg btn-primary" type="button">
            <a asp-controller="ImageUpload"
               asp-action="Create">Upload Images</a>
        </button>
        <button class="btn btn-lg btn-primary" type="button">
            <a asp-controller="ImageUpload"
               asp-action="Index">Stored Images</a>
        </button>
        <button class="btn btn-lg btn-primary" type="button">
            <a asp-controller="ImageUpload"
               asp-action="ProcessImage">Process Images</a>
        </button>
        <button class="btn btn-lg btn-primary" type="button">
            <a asp-controller="ProcessedImages"
               asp-action="Index">Processed Images</a>
        </button>
    </div>
</div>
